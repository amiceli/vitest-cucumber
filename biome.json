{
    "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "files": {
        "includes": [
            "**",
            "!**/package.json",
            "!**/package-lock.json",
            "!**/dist",
            "!**/coverage",
            "!**/tsconfig.json",
            "!**/tsconfig.vitest.json",
            "!**/src/parser/lang/lang.json",
            "!**/reports"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noUnusedTemplateLiteral": "off",
                "noInferrableTypes": "off"
            },
            "correctness": {
                "noUnusedImports": "error"
            }
        }
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "expand": "always"
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "single"
        }
    }
}
