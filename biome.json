{
    "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "ignore": [
            "package.json",
            "package-lock.json",
            "dist/",
            "coverage/",
            "tsconfig.json",
            "tsconfig.vitest.json",
            "src/parser/lang/lang.json"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noUnusedTemplateLiteral": "off",
                "noInferrableTypes": "off"
            }
        }
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "single"
        }
    }
}
